{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": false,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "shared/*": ["../shared/*"],
      "@/*": ["./src/*"],
    }
  },
  "include": ["**/*.ts", "index.ts"],
  "exclude": ["node_modules"]
}
